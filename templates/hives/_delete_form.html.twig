<form
  method="post"
  action="{{ path('app_hives_delete', { id: t_hive.id }) }}"
  onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer la ruche {{
    t_hive.reference
  }} ?');"
>
  <input
    type="hidden"
    name="_token"
    value="{{ csrf_token('delete' ~ t_hive.id) }}"
  />
  <button class="btn btn-danger m-1">Supprimer</button>
</form>
