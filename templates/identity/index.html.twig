{% extends 'base.html.twig' %} {% block title %}Identité{% endblock %} {% block
body %}
<h1>Identité</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Prénom</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    {% if t_users_info_identity %}
    <tr>
      <td>
        <span class="fs-5">{{ t_users_info_identity.lastName }}</span>
      </td>
      <td>
        <span class="fs-5">{{ t_users_info_identity.firstName }}</span>
      </td>
      <td>
        <a
          class="btn btn-primary m-1"
          href="{{
            path('app_identity_edit', {
              userIdIdentityAccount: t_users_info_identity.userIdIdentityAccount
            })
          }}"
          >Modifier</a
        >
        {{ include("identity/_delete_form.html.twig") }}
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="2">
        <a class="text-decoration-none" href="{{ path('app_identity_new') }}"
          ><b>+</b>Ajouter un nom et un prénom</a
        >
      </td>
    </tr>
  </tbody>
</table>

{% endif %}
<a class="btn btn-secondary m-1" href="{{ path('app_user_info_account') }}"
  >Retour</a
>
{% endblock %}
