{% extends 'base.html.twig' %} {% block title %}Identité{% endblock %} {% block
body %}
<h1>Identité</h1>

<table class="table">
  <thead>
    <tr>
      <th>Numéro de rue</th>
      <th>Nom de rue</th>
      <th>Code postal</th>
      <th>Ville</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    {% if t_users_info_address %}
    <tr>
      <td>
        <span class="fs-5">{{ t_users_info_address.streetNumber }}</span>
      </td>
      <td>
        <span class="fs-5">{{ t_users_info_address.streetName }}</span>
      </td>
      <td>
        <span class="fs-5">{{ t_users_info_address.postalCode }}</span>
      </td>
      <td>
        <span class="fs-5">{{ t_users_info_address.town }}</span>
      </td>
      <td>
        <a
          class="btn btn-primary m-1"
          href="{{
            path('app_address_edit', {
              userIdAddressAccount: t_users_info_address.userIdAddressAccount
            })
          }}"
          >Modifier</a
        >
        {{ include("address/_delete_form.html.twig") }}
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="2">
        <a class="text-decoration-none" href="{{ path('app_address_new') }}"
          ><b>+</b>Ajouter une adresse</a
        >
      </td>
    </tr>
  </tbody>
</table>

{% endif %}
<a class="btn btn-secondary m-1" href="{{ path('app_user_info_account') }}"
  >Retour</a
>
{% endblock %}
