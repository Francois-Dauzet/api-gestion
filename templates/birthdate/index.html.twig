{% extends 'base.html.twig' %} {% block title %}Date de naissance{% endblock %}
{% block body %}
<h1>Date de naissance</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% if t_user_info_birthdate %}
    <tr>
      <td>
        {# / |date("d/m/Y") Force le typage pour la date #}
        <span
          class="fs-5"
          >{{ t_user_info_birthdate.birthdate|date("d/m/Y") }}</span
        >
      </td>
      <td>
        <a
          class="btn btn-primary m-1"
          href="{{
            path('app_birthdate_edit', {
              userIdBirthdateAccount:
                t_user_info_birthdate.userIdBirthdateAccount
            })
          }}"
          >Modifier</a
        >
        {{ include("birthdate/_delete_form.html.twig") }}
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="2">
        <a class="text-decoration-none" href="{{ path('app_birthdate_new') }}"
          ><b>+</b>Ajouter une date de naissance</a
        >
      </td>
    </tr>
  </tbody>
</table>

{% endif %}
<a class="btn btn-secondary m-1" href="{{ path('app_user_info_account') }}"
  >Retour</a
>
{% endblock %}
