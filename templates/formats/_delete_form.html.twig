<form
  method="post"
  action="{{ path('app_formats_delete', { id: t_format.id }) }}"
  onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer le format de ruche ?');"
>
  <input
    type="hidden"
    name="_token"
    value="{{ csrf_token('delete' ~ t_format.id) }}"
  />
  <button class="btn btn-danger m-1">Supprimer</button>
</form>
