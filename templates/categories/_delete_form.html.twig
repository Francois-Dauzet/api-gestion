<form
  method="post"
  action="{{ path('app_categories_delete', { id: t_category.id }) }}"
  onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer une catégorie de ruche ?');"
>
  <input
    type="hidden"
    name="_token"
    value="{{ csrf_token('delete' ~ t_category.id) }}"
  />
  <button class="btn btn-danger m-1">Supprimer</button>
</form>
