    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for t_swarm in t_swarms %}
            <tr>
                <td>{{ t_swarm.id }}</td>
                <td>
