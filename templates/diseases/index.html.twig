{% extends 'base.html.twig' %}

{% block title %}TDiseases index{% endblock %}

{% block body %}
    <h1>TDiseases index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for t_disease in t_diseases %}
            <tr>
                <td>{{ t_disease.id }}</td>
                <td>{{ t_disease.label }}</td>
                <td>
                    <a href="{{ path('app_diseases_show', {'id': t_disease.id}) }}">show</a>
                    <a href="{{ path('app_diseases_edit', {'id': t_disease.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_diseases_new') }}">Create new</a>
{% endblock %}
